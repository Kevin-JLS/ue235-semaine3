{% extends 'base.html.twig' %}

{% block title %}Hello NavigationController!{% endblock %}

{% block body %}
<style>
    body {margin: 0; padding: 0;}
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .nav {width: 100%; height: 40px; background:black; display: flex; justify-content: center; align-items: center; font-family: 'Montserrat', sans-serif; }
    .nav-list {width: 500px; display:flex; justify-content: space-between; align-items: center; }
    .nav-list a {text-decoration: none; color:#f1f1f1; font-weight: lighter;}
    .nav-list-link {list-style-type: none;}
    .nav-list a:hover {color:crimson;}
</style>

<nav class="nav">
    <ul class="nav-list">
        <a href="" target="_blank"><li class="nav-list-link">{{nav.accueil}}</li></a>
        <a href="" target="_blank"><li class="nav-list-link">{{nav.blog}}</li></a>
        <a href="" target="_blank"><li class="nav-list-link">{{nav.articles}}</li></a>
        <a href="" target="_blank"><li class="nav-list-link">{{nav.categories}}</li></a>
    </ul>
</nav>

{% endblock %}
